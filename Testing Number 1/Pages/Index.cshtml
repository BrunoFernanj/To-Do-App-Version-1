@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <div id="app" class="todo-container">
        <h1 class="title">My First ToDo App</h1>

        <div class="input-row">
            <input type="text" v-model="newTodo" placeholder="Enter a new task" />
            <button v-on:click ="addTodo">Add</button>
        </div>

        <transition-group name="fade" tag="ul" class="todo-list">
            <li v-for="(todo, index) in todos" :key="index" class="todo-item">
                <input type="checkbox" v-model="todo.completed" />

                <span :class="{ completed: todo.completed }">
                    {{ todo.text }}
                </span>
                <button class="delete-btn" @@click="removeTodo(index)">✕</button>
            </li>
        </transition-group>

    </div>

    <p>
        Learn about
        <a href="https://learn.microsoft.com/aspnet/core">
            building Web apps with ASP.NET Core
        </a>.
    </p>
</div>
<script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
